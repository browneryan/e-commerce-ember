{{#if addNewReview}}
  <h1>New Review</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="user">Username</label>
          {{input value=user id="user" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="review">Your review</label>
          {{input value=review id="review" class="form-control"}}
        </div>

        <button class="waves-effect waves-green btn saveNewReview"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-green btn newReviewForm"{{action 'reviewFormShow'}}>New Review</button>
{{/if}}
