{{#if addNewReview}}
  <h5>Let us know what you think of this tour!</h5>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="user">Your Name</label>
          {{input value=user id="user" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="review">Your review</label>
          {{input value=review id="review" class="form-control"}}
        </div>

        <button class="waves-effect waves-light btn adminBtn"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-light btn adminBtn"{{action 'reviewFormShow'}}>New Review</button>
{{/if}}
