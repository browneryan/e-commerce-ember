{{#if editTour}}
    <div class="container">
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=tour.name id="name" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          {{input value=tour.price id="price" type="number" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="tourLength">Tour length</label>
          {{input value=tour.tourLength id="tourLength" type="number" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=tour.description id="description" type="text" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=tour.image id="image" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="itinerary">Itinerary</label>
          {{input value=tour.itinerary id="itinerary" class="form-control"}}
        </div>

      <button class="waves-effect waves-light btn adminBtn"{{action 'update' tour}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="waves-effect waves-light btn adminBtn"{{action 'editTour'}}>Edit Tour</button>
{{/if}}
