<div class="col s3 tourTile">
    {{#link-to 'tour' tour.id}}<img src="{{tour.image}}" alt="photo of hot air balloons">
    <h3>{{tour.name}}</h3>{{/link-to}}
    <p>{{tour.price}}</p>
    <p>{{tour.length}}</p>
  <div class="admin-btns">
    {{update-tour tour=tour update="update"}}
    <br>
    <button class="waves-effect waves-light btn adminBtn" {{action 'delete' tour}}>Delete</button>
  </div>
</div>
